{
    "name": "jjuanrivvera/canvas-lms-kit",
    "description": "The most comprehensive PHP SDK for Canvas LMS API. Production-ready with 90% API coverage, rate limiting, and full test coverage.",
    "keywords": [
        "canvas",
        "canvas-lms",
        "canvas-lms-api",
        "canvas-lms-php",
        "canvas-lms-php-api",
        "canvas-lms-php-library",
        "canvas-lms-php-sdk",
        "canvas-lms-php-wrapper",
        "canvas-lms-sdk",
        "canvas-lms-wrapper",
        "canvas-php",
        "canvas-php-api",
        "canvas-php-library",
        "canvas-php-sdk",
        "canvas-php-wrapper",
        "canvas-sdk",
        "canvas-wrapper",
        "lms",
        "lms-api",
        "lms-php",
        "lms-php-api",
        "lms-php-library",
        "lms-php-sdk",
        "lms-php-wrapper",
        "lms-sdk",
        "lms-wrapper",
        "php",
        "php-api",
        "php-library",
        "php-sdk",
        "php-wrapper",
        "sdk",
        "wrapper"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/jjuanrivvera/canvas-lms-kit",
    "authors": [
        {
            "name": "Juan Rivera",
            "email": "jjuanrivvera@gmail.com",
            "homepage": "https://github.com/jjuanrivvera",
            "role": "Lead Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/jjuanrivvera/canvas-lms-kit/issues",
        "source": "https://github.com/jjuanrivvera/canvas-lms-kit",
        "docs": "https://github.com/jjuanrivvera/canvas-lms-kit/wiki",
        "email": "jjuanrivvera@gmail.com"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/jjuanrivvera99"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "CanvasLMS\\": "src/"
        },
        "files": [
            "src/Utilities/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests --testdox",
        "test:coverage": "phpunit tests --coverage-html coverage",
        "cs": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src",
        "phpstan": "phpstan analyse --memory-limit=256M",
        "check": [
            "@cs",
            "@phpstan",
            "@test"
        ],
        "pre-release": [
            "@check",
            "@test:coverage",
            "composer validate --strict",
            "composer audit"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "test:coverage": "Generate test coverage report",
        "cs": "Check PSR-12 coding standards",
        "cs-fix": "Fix PSR-12 coding standard violations",
        "phpstan": "Run static analysis",
        "check": "Run all quality checks",
        "pre-release": "Run all checks before release"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        },
        "platform": {
            "php": "8.1.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
